<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Indian_Gooseberry">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- เพิ่มรูปมะขามป้อม -->
            <ImageView
                android:id="@+id/imageViewIndianGooseberry"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/indiangooseberry"
                android:contentDescription="มะขามป้อม"
                android:scaleType="centerCrop" />

            <!-- ชื่อสมุนไพร -->
            <TextView
                android:id="@+id/textViewMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌿 มะขามป้อม (Indian Gooseberry)"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                android:layout_marginBottom="8dp" />

            <!-- คำบรรยาย -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="มะขามป้อมมีรสเปรี้ยวฝาดขมและมีสรรพคุณหลากหลายที่ช่วยบรรเทาอาการต่างๆ"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ลักษณะภายนอก -->
            <TextView
                android:id="@+id/textViewFeaturesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 ลักษณะภายนอกของเครื่องยา"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ผลสดกลมมีเนื้อ ผิวเรียบ ใสฉ่ำน้ำ เมื่อดิบสีเขียวออกเหลือง ผลสุกสีเหลืองออกน้ำตาล เส้นผ่านศูนย์กลาง 1-2 ซม. มีเส้นพาดตามความยาวของลูก 6 เส้น เมล็ดกลมแข็ง 1 เมล็ด"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรรพคุณทางยา -->
            <TextView
                android:id="@+id/textViewBenefitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💊 สรรพคุณทางยา"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewBenefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ รักษาอาการท้องอืด ท้องเฟ้อ เสียดท้อง\n✅ แก้คลื่นไส้ อาเจียน ท้องเสีย\n✅ ช่วยกระตุ้นความอยากอาหาร\n✅ แก้ไข้เจือลม แก้ไอ และกระหายน้ำ\n✅ ช่วยย่อยอาหารและขับปัสสาวะ\n✅ ใช้ในตำรับยาแผนโบราณเพื่อบำรุงหัวใจและฟอกโลหิต"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- วิธีใช้ -->
            <TextView
                android:id="@+id/textViewUsageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝 วิธีใช้มะขามป้อม"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔹 ใช้เนื้อผลสด 2-5 ผล โขลกพอแหลก อม หรือเคี้ยววันละ 3-4 ครั้ง\n🔹 ผลสดฝนกับน้ำแทรกเกลือจิบบ่อยๆ หรือใช้ผลสดจิ้มเกลือรับประทาน\n🔹 ผลแห้ง 6-12 กรัม คั้นน้ำดื่มหรือเคี้ยวอม"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ข้อควรระวัง -->
            <TextView
                android:id="@+id/textViewWarningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ ข้อควรระวังในการใช้มะขามป้อม"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔴 ผู้ที่มีปัญหาเกี่ยวกับไต\n🔴 ผู้ที่มีภาวะเลือดแข็งตัวยากหรือใช้ยาละลายลิ่มเลือด\n🔴 ผู้ที่มีภาวะกรดไหลย้อนหรือกระเพาะอาหารอักเสบ\n🔴 หญิงตั้งครรภ์และให้นมบุตร\n🔴 ไม่ควรรับประทานร่วมกับยาลดน้ำตาลในเลือดโดยไม่ปรึกษาแพทย์"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรุป -->
            <TextView
                android:id="@+id/textViewSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌱 มะขามป้อม เป็นสมุนไพรที่มีประโยชน์มากมาย"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="มะขามป้อมมีสรรพคุณหลายประการที่ช่วยบรรเทาอาการต่างๆ แต่ควรใช้อย่างระมัดระวังสำหรับผู้ที่มีปัญหาสุขภาพบางประการ"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
</AbsoluteLayout>
