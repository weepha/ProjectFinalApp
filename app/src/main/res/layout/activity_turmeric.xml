<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Turmeric">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- เพิ่มรูปขมิ้นชัน -->
            <ImageView
                android:id="@+id/turmeric1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/turmeric1"
                android:contentDescription="ขมิ้นชัน"
                android:scaleType="centerCrop" />

            <!-- ชื่อสมุนไพร -->
            <TextView
                android:id="@+id/textViewMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌿 ขมิ้นชัน"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                android:layout_marginBottom="8dp" />

            <!-- คำบรรยาย -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สมุนไพรสารพัดประโยชน์ รสขมแต่คุณค่ามากมาย!"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ลักษณะภายนอก -->
            <TextView
                android:id="@+id/textViewFeaturesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 ลักษณะภายนอกของขมิ้นชัน"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ขมิ้นชันเป็นเหง้าใต้ดินที่มีรูปร่างเป็นทรงกระบอกคล้ายนิ้วมือ ยาว 4-7 ซม. ผิวภายนอกมีสีน้ำตาลเหลืองเข้ม มีรอยย่นและวงแหวนขวาง (leaf scars) ภายในมีสีเหลืองเข้มหรือส้มปนน้ำตาล เป็นมันและเหนียว เมื่อนำมาบดเป็นผงจะมีสีเหลืองทองพร้อมกลิ่นหอมเฉพาะตัว รสชาติขม ฝาด เฝื่อน และเผ็ดเล็กน้อย"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรรพคุณเด่น -->
            <TextView
                android:id="@+id/textViewBenefitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌱 สรรพคุณที่โดดเด่นของขมิ้นชัน"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewBenefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏥 การใช้ภายใน (รับประทาน)\n✅ ช่วยเจริญอาหารและบำรุงธาตุ\n✅ ฟอกเลือด แก้ท้องอืดเฟ้อ แน่นจุกเสียด\n✅ บรรเทาอาการปวดประจำเดือน และช่วยให้รอบเดือนมาปกติ\n✅ ลดอาการวิงเวียนศีรษะ แก้หวัด และลดไข้\n✅ มีฤทธิ์ต้านเชื้อแบคทีเรียและต้านวัณโรค\n✅ ป้องกันโรคหนองใน และช่วยรักษาอาการท้องเสีย\n✅ ช่วยชะลอการแพร่กระจายของมะเร็ง\n💆‍♀️ การใช้ภายนอก\n✅ ลดอาการฟกช้ำ บวม และปวดข้อ\n✅ สมานแผลสด แผลพุพอง และลดอาการแพ้\n✅ แก้โรคผิวหนัง กลาก เกลื้อน ผดผื่นคัน\n✅ ลดการอักเสบจากแมลงสัตว์กัดต่อย"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- วิธีใช้ -->
            <TextView
                android:id="@+id/textViewUsageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏺 รูปแบบการใช้ขมิ้นชัน"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📌 รับประทาน\n🔹 แคปซูลขมิ้นชัน (250 มก.) ทานครั้งละ 2-4 แคปซูล วันละ 4 ครั้ง หลังอาหารและก่อนนอน\n🔹 เหง้าสด ขูดเปลือก ตำละเอียด เติมน้ำ คั้นเอาน้ำดื่ม 2 ช้อนโต๊ะ วันละ 3-4 ครั้ง\n📌 ใช้ภายนอก\n🔸 ฝนเหง้าสดกับน้ำ ทาบริเวณแผล หรือแมลงสัตว์กัดต่อย\n🔸 บดเหง้าแห้งเป็นผง ใช้ทาบริเวณผื่นคัน\n🔸 นำผงขมิ้นชันเคี่ยวกับน้ำมันพืช ทำเป็นน้ำมันใส่แผล"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ข้อควรระวัง -->
            <TextView
                android:id="@+id/textViewWarningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ ข้อควรระวัง"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚨 ระวังการใช้ในปริมาณสูง อาจทำให้เกิดแผลในกระเพาะอาหาร\n🚨 บางคนอาจแพ้ขมิ้นชัน ส่งผลให้เกิดอาการคลื่นไส้ ปวดหัว หรือท้องเสีย\n🚨 ห้ามใช้ในผู้ที่มีนิ่วในถุงน้ำดี หรือหญิงตั้งครรภ์\n🚨 ระวังการใช้ร่วมกับยาต้านการแข็งตัวของเลือด อาจทำให้เลือดหยุดไหลช้ากว่าปกติ"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรุป -->
            <TextView
                android:id="@+id/textViewSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎯 สรุป: ขมิ้นชันดีไหม?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ ขมิ้นชันช่วยรักษาโรคได้หลายประเภท เช่น ไข้หวัด ปวดท้อง หรือแผลพุพอง\n✅ มีประโยชน์ทั้งในด้านการบำรุงสุขภาพและการรักษาอาการต่าง ๆ\n❌ ควรระวังการใช้ในผู้ที่มีโรคประจำตัวบางชนิด"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- คำแนะนำ -->
            <TextView
                android:id="@+id/textViewConsultDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="หากสนใจใช้ขมิ้นชัน ควรปรึกษาแพทย์หรือเภสัชกร เพื่อความปลอดภัย! 🏥💙"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/green_dark" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/backturBT"
        android:layout_width="377dp"
        android:layout_height="71dp"
        android:layout_x="17dp"
        android:layout_y="774dp"
        android:text="Go Back"
        android:textSize="20sp" />
</AbsoluteLayout>
