<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ginger">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- เพิ่มรูปขิง -->
            <ImageView
                android:id="@+id/ginger1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ginger1"
                android:contentDescription="ขิง"
                android:scaleType="centerCrop" />

            <!-- ชื่อสมุนไพร -->
            <TextView
                android:id="@+id/textViewMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌿 ขิง (Ginger)"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                android:layout_marginBottom="8dp" />

            <!-- คำบรรยาย -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สมุนไพรที่มีประโยชน์ในการรักษาอาการต่าง ๆ และมีรสชาติหอมเผ็ดร้อน!"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ลักษณะภายนอก -->
            <TextView
                android:id="@+id/textViewFeaturesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 ลักษณะภายนอกของเครื่องยา"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เหง้าขิงมีลักษณะเป็นข้อๆ แบนในแนวนอน แตกแขนงคล้ายฝ่ามือที่มีแง่งเล็กๆ คล้ายกับนิ้วมือ\n- ขนาด: ยาว 3-16 ซม. กว้าง 3-4 ซม. และหนามากกว่า 2 ซม.\n- สี: ผิวนอกสีเหลืองหรือน้ำตาลอ่อน มีแนวย่นตามยาว ภายในสีเหลืองอ่อนถึงน้ำตาล\n- ลักษณะเนื้อ: เป็นเสี้ยน มีเส้นใยมาก\n- กลิ่นและรส: มีกลิ่นหอมเฉพาะตัว รสหวาน เผ็ดร้อน 🔥"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรรพคุณทางยา -->
            <TextView
                android:id="@+id/textViewBenefitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💊 สรรพคุณทางยา"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewBenefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ รักษาอาการท้องอืด ท้องเฟ้อ เสียดท้อง อาหารไม่ย่อย\n✅ แก้คลื่นไส้ อาเจียน ท้องเสีย\n✅ ช่วยกระตุ้นความอยากอาหาร\n✅ รักษาอาการหวัด ปวดศีรษะจากไมเกรน ปวดข้อ และปวดกล้ามเนื้อ\n✅ บำรุงธาตุไฟ ฆ่าพยาธิ\n✅ ขับเหงื่อ แก้ไอ ขับเสมหะ\n✅ แก้จุกเสียด แก้ลม ลดความดัน"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- วิธีใช้ -->
            <TextView
                android:id="@+id/textViewUsageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝 วิธีใช้ขิง"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔹 บรรเทาท้องอืด ขับลม ปวดท้อง\n- ใช้ขิงแก่สด 5 กรัม (2 หัวแม่มือ) ทุบ ต้มดื่มวันละ 3 ครั้ง\n🔹 แก้คลื่นไส้อาเจียน\n- ใช้ขิงแก่สด 5 กรัม ต้มเอาน้ำดื่ม"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ข้อควรระวัง -->
            <TextView
                android:id="@+id/textViewWarningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ ข้อควรระวังในการใช้ขิง"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚨 ระวังการใช้ร่วมกับยาเหล่านี้:\n- ยากันเลือดเป็นลิ่ม (anticoagulants) และ ยาต้านเกล็ดเลือด\n- ผู้ป่วยโรคนิ่วในถุงน้ำดี ควรปรึกษาแพทย์ก่อนใช้\n- ไม่แนะนำให้เด็กอายุต่ำกว่า 6 ปีรับประทาน"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรุป -->
            <TextView
                android:id="@+id/textViewSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌱 ขิง เป็นสมุนไพรที่มีประโยชน์มากมาย"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ขิงช่วยบรรเทาอาการต่าง ๆ และมีประโยชน์มากมายต่อสุขภาพ ควรใช้อย่างระมัดระวังเพื่อความปลอดภัยสูงสุด!"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
</AbsoluteLayout>
