<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Turmeric">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- เพิ่มรูปกระชาย -->
            <ImageView
                android:id="@+id/boesenbergiarotunda"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/boesenbergiarotunda"
                android:contentDescription="กระชาย"
                android:scaleType="centerCrop" />

            <!-- ชื่อสมุนไพร -->
            <TextView
                android:id="@+id/textViewMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌱 กระชาย: สมุนไพรเสริมพลัง บำรุงร่างกาย"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                android:layout_marginBottom="8dp" />

            <!-- คำบรรยาย -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="กระชายเป็นสมุนไพรที่มีสรรพคุณในการบำรุงร่างกายและรักษาอาการต่าง ๆ"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ลักษณะภายนอก -->
            <TextView
                android:id="@+id/textViewFeaturesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 ลักษณะภายนอกของกระชาย"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="กระชายเป็นพืชสมุนไพรที่มีลักษณะเด่น เหง้ามีขนาดสั้นและมีรากสดที่แตกออกเป็นกระจุก"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรรพคุณ -->
            <TextView
                android:id="@+id/textViewBenefitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💪 สรรพคุณของกระชาย"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewBenefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- ช่วยลดอาการท้องอืด ท้องเฟ้อ\n- แก้ปวดมวนท้อง และช่วยเจริญอาหาร\n- บำรุงกำลังและช่วยกระชับกำหนัด"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- วิธีใช้ -->
            <TextView
                android:id="@+id/textViewUsageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📚 วิธีใช้กระชายในรูปแบบต่างๆ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- ใช้เหง้าหรือรากประมาณครึ่งกำมือ ต้มกับน้ำดื่ม\n- ใช้เหง้าหรือหัวสด ย่างไฟพอสุก ตำกับน้ำปูนใส"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ข้อควรระวัง -->
            <TextView
                android:id="@+id/textViewWarningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ ข้อควรระวังในการใช้กระชาย"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. ผู้ที่มีความดันโลหิตสูงควรระมัดระวัง\n2. ผู้ที่มีปัญหาตับและไตไม่ควรใช้ในปริมาณมาก\n3. หญิงตั้งครรภ์และให้นมบุตร ควรปรึกษาแพทย์ก่อนใช้"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรุป -->
            <TextView
                android:id="@+id/textViewSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌟 กระชาย: สมุนไพรไทยที่เต็มไปด้วยสรรพคุณ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="กระชายมีประโยชน์มากมาย แต่ควรใช้ในปริมาณที่เหมาะสมและตามคำแนะนำของแพทย์"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- คำแนะนำ -->
            <TextView
                android:id="@+id/textViewConsultDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="หากสนใจใช้กระชาย ควรปรึกษาแพทย์เพื่อความปลอดภัย"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/green_dark" />

        </LinearLayout>
    </ScrollView>
</AbsoluteLayout>


