<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pandan_Leaf">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- เพิ่มรูปใบเตย -->
            <ImageView
                android:id="@+id/imageViewPandanLeaf"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/pandanleaf"
                android:contentDescription="ใบเตย"
                android:scaleType="centerCrop" />

            <!-- ชื่อสมุนไพร -->
            <TextView
                android:id="@+id/textViewMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌿 ใบเตย (Pandan Leaf)"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                android:layout_marginBottom="8dp" />

            <!-- คำบรรยาย -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ใบเตยมีใบยาวเรียวแหลมและมีกลิ่นหอมเฉพาะที่ทำให้เป็นที่นิยมใช้ในอาหารและเครื่องดื่ม"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ลักษณะภายนอก -->
            <TextView
                android:id="@+id/textViewFeaturesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 ลักษณะภายนอกของเครื่องยา"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ใบเตยเป็นพืชล้มลุกที่มีใบยาวเรียวแหลมและมีสีเขียวเข้ม มีกลิ่นหอมเฉพาะตัว ซึ่งเป็นเอกลักษณ์"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรรพคุณทางยา -->
            <TextView
                android:id="@+id/textViewBenefitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💊 สรรพคุณทางยา"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewBenefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ บำรุงร่างกายและเพิ่มพลังงาน\n✅ บรรเทาอาการท้องอืด ท้องเฟ้อ หรือปวดท้อง\n✅ ลดอาการเครียดและกระตุ้นการไหลเวียนของเลือด\n✅ เป็นยาระบายอ่อน ๆ ช่วยขับถ่าย\n✅ ลดระดับน้ำตาลในเลือด\n✅ ช่วยชะลอการเสื่อมของเซลล์"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- วิธีใช้ -->
            <TextView
                android:id="@+id/textViewUsageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝 วิธีใช้ใบเตย"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔹 ชาใบเตย: ต้มใบเตย 3-4 ใบในน้ำร้อน 1-2 แก้ว\n🔹 สารสกัดน้ำมันหอมระเหย: ใช้ทาผิวหรือสูดดม\n🔹 ใบเตยสด: ใช้เพิ่มกลิ่นหอมในอาหารหรือเครื่องดื่ม"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ข้อควรระวัง -->
            <TextView
                android:id="@+id/textViewWarningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ ข้อควรระวังในการใช้ใบเตย"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔴 ใช้ในปริมาณมากเกินไปอาจทำให้เกิดการระคายเคืองในระบบทางเดินอาหาร\n🔴 ผู้ที่แพ้พืชตระกูล Pandan ควรหลีกเลี่ยง\n🔴 สตรีมีครรภ์หรือให้นมบุตร ควรปรึกษาแพทย์ก่อนการใช้\n🔴 ผู้ที่มีปัญหาสุขภาพบางประเภท เช่น โรคตับหรือไต ควรปรึกษาแพทย์"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรุป -->
            <TextView
                android:id="@+id/textViewSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌱 ใบเตยเป็นสมุนไพรที่มีสรรพคุณหลากหลาย"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ใบเตยช่วยในหลาย ๆ ด้าน เช่น การบำรุงร่างกาย ลดความเครียด และบรรเทาอาการปวดท้อง แต่ควรใช้อย่างระมัดระวัง"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/backpandanBT"
        android:layout_width="375dp"
        android:layout_height="71dp"
        android:layout_x="17dp"
        android:layout_y="774dp"
        android:text="Go Back"
        android:textSize="20sp" />
</AbsoluteLayout>
