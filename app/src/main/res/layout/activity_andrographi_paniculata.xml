<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndrographiPaniculata">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- เพิ่มรูปฟ้าทะลายโจร -->
            <ImageView
                android:id="@+id/imageViewAndrographis"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/andrographispaniculata"
                android:contentDescription="ฟ้าทะลายโจร"
                android:scaleType="centerCrop" />

            <!-- ชื่อสมุนไพร -->
            <TextView
                android:id="@+id/textViewMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌿 ฟ้าทะลายโจร"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                android:layout_marginBottom="8dp" />

            <!-- คำบรรยาย -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สมุนไพรไทยตัวจี๊ด รสขมแต่คุณค่ามากมาย!"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ลักษณะภายนอก -->
            <TextView
                android:id="@+id/textViewFeaturesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 ลักษณะภายนอกของฟ้าทะลายโจร"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🟢 ลำต้น: ทรงสี่เหลี่ยม ผิวเรียบ\n🍃 ใบ: เดี่ยว, รูปไข่/รูปรี, สีเขียวเข้มด้านบน, ขอบใบเรียบหรือหยักเล็กน้อย\n🌱 ส่วนที่ใช้เป็นยา: ส่วนเหนือดิน (ลำต้นและใบ)"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรรพคุณเด่น -->
            <TextView
                android:id="@+id/textViewBenefitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💊 สรรพคุณเด่นของฟ้าทะลายโจร"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewBenefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔹 บรรเทาไข้หวัด-เจ็บคอ: แก้ไอ ระงับอาการอักเสบ ลดไข้จากหวัดและไข้หวัดใหญ่\n🔹 ลดอาการติดเชื้อทางเดินหายใจ: ปอดอักเสบ หลอดลมอักเสบ ต่อมทอนซิลอักเสบ\n🔹 รักษาโรคเกี่ยวกับระบบทางเดินอาหาร: แก้ท้องเสีย กระเพาะอาหารอักเสบ ลำไส้อักเสบ\n🔹 บำรุงผิวพรรณ: รักษาฝี แผลพุพอง"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- วิธีใช้ -->
            <TextView
                android:id="@+id/textViewUsageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💡 วิธีใช้ฟ้าทะลายโจรให้ได้ผล"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- วิธีใช้ 1 -->
            <TextView
                android:id="@+id/textViewUsage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1️⃣ บรรเทาหวัด-เจ็บคอ 🤧\n📌 ขนาดยา: 1.5 – 3 กรัม/ครั้ง, วันละ 4 ครั้ง (หลังอาหาร + ก่อนนอน)\n📌 สารสำคัญ: Andrographolide 60 - 120 มก./วัน\n⛔ ห้ามใช้ในกรณี: เจ็บคอจากเชื้อแบคทีเรียรุนแรง (มีไข้สูง หนาวสั่น), มีประวัติโรคไตอักเสบ หรือโรคหัวใจรูห์มาติค"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- วิธีใช้ 2 -->
            <TextView
                android:id="@+id/textViewUsage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2️⃣ ฟ้าทะลายโจร และ COVID-19 🦠\n✅ ใช้รักษาผู้ป่วยโควิดที่มีอาการไม่รุนแรง\n📌 ขนาดยา: 180 มก./วัน (แบ่งกิน 3 ครั้ง) นาน 5 วัน\n⚠️ หมายเหตุ: ✔️ มีผลช่วยลดจำนวนไวรัสในเซลล์ แต่ไม่ได้ป้องกันไวรัสเข้าสู่ร่างกาย"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- วิธีใช้ 3 -->
            <TextView
                android:id="@+id/textViewUsage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3️⃣ แก้อาการท้องเสีย (ที่ไม่ติดเชื้อ) 💩\n📌 ขนาดยา: 500 มก. - 2 กรัม/ครั้ง, วันละ 4 ครั้ง\n📌 รูปแบบยา: ผงบดละเอียดจากส่วนเหนือดิน"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- วิธีใช้ 4 -->
            <TextView
                android:id="@+id/textViewUsage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4️⃣ ใช้ภายนอก: รักษาแผลและฝี 🔥\n✅ ใบสดตำพอกฝี หรือ\n✅ คั้นน้ำทาแผลพุพอง (ทาบ่อย ๆ เปลี่ยนเช้า-เย็น)"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ข้อควรระวัง -->
            <TextView
                android:id="@+id/textViewWarningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ ข้อควรระวัง และ ข้อห้ามใช้"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚫 ห้ามใช้ในคนที่แพ้ฟ้าทะลายโจร\n🚫 ห้ามใช้ในหญิงตั้งครรภ์และให้นมบุตร (อาจกระทบต่อทารก)\n🚫 ห้ามใช้ติดต่อกันนานเกินไป อาจทำให้ มือเท้าชา กล้ามเนื้ออ่อนแรง"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- อาการข้างเคียง -->
            <TextView
                android:id="@+id/textViewSideEffectsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😖 อาการข้างเคียงที่อาจพบ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewSideEffects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😵 วิงเวียนศีรษะ ใจสั่น\n🤢 คลื่นไส้ เบื่ออาหาร ปวดท้อง\n🛑 อาจเกิดลมพิษในบางราย"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรุป -->
            <TextView
                android:id="@+id/textViewSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📌 สรุป: ฟ้าทะลายโจร ดีไหม?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ มีประโยชน์มากสำหรับไข้หวัด เจ็บคอ อาการอักเสบ\n✅ ช่วยบรรเทาอาการโควิดในระยะเริ่มต้น\n✅ ใช้ได้ทั้งภายในและภายนอก\n❌ ไม่ควรใช้ต่อเนื่องเป็นเวลานาน\n❌ มีข้อห้ามสำหรับผู้ที่มีโรคประจำตัวบางชนิด"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textViewConsultDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="หากสนใจใช้ฟ้าทะลายโจร ควรปรึกษาแพทย์หรือเภสัชกร เพื่อความปลอดภัย! 🏥💙"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/green_dark" />

        </LinearLayout>
    </ScrollView>
</AbsoluteLayout>
