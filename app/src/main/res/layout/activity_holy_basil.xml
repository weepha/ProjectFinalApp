<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Holy_Basil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- เพิ่มรูปกะเพราแดง -->
            <ImageView
                android:id="@+id/imageViewHolyBasil"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:contentDescription="กะเพราแดง"
                android:scaleType="centerCrop"
                android:src="@drawable/holybasil" />

            <!-- ชื่อสมุนไพร -->
            <TextView
                android:id="@+id/textViewMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="🌿 กะเพราแดง (Holy Basil)"
                android:textColor="@color/green_dark"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- คำบรรยาย -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="สมุนไพรที่ช่วยบรรเทาอาการต่าง ๆ และมีประโยชน์ต่อสุขภาพ!"
                android:textSize="16sp" />

            <!-- ลักษณะภายนอก -->
            <TextView
                android:id="@+id/textViewFeaturesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="🔍 ลักษณะภายนอกของเครื่องยา"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="ใบและลำต้นมีสีเขียวอมม่วงแดง ใบทั้งสองด้านมีขนมาก โดยเฉพาะส่วนยอด เนื้อใบบาง รูปร่างรีหรือรีขอบขนาน กว้าง 1-2.5 เซนติเมตร ยาว 2-4.5 เซนติเมตร ปลายใบและโคนใบอาจแหลมหรือมน ขอบใบค่อนข้างหยัก ใบและยอดมีรสเผ็ดร้อน และมีกลิ่นหอมเฉพาะตัว"
                android:textSize="16sp" />

            <!-- สรรพคุณทางยา -->
            <TextView
                android:id="@+id/textViewBenefitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="💊 สรรพคุณทางยา"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewBenefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="✅ ช่วยลดอาการท้องอืดเฟ้อ ขับลม แก้ปวดท้อง บำรุงธาตุ\n✅ ขับผายลม แก้อาการจุกเสียดในท้อง ทำให้เรอ แก้ท้องร่วง และคลื่นไส้อาเจียน\n✅ ใช้เป็นยา ขับเสมหะ ขับเหงื่อ บรรเทาอาการไข้ แก้ปวดฟัน"
                android:textSize="16sp" />

            <!-- วิธีใช้ -->
            <TextView
                android:id="@+id/textViewUsageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="📝 วิธีใช้กะเพราแดง"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="🔹 ลดอาการท้องอืดเฟ้อ ขับลม ปวดท้อง\n- ใช้ใบสด 1 กำมือ (ประมาณ 25 กรัม) หรือใบแห้ง 4 กรัม\n- ต้มให้เดือด ดื่มน้ำ หรือชงเป็นชา\n🔹 แก้อาการคลื่นไส้อาเจียน\n- ใช้ใบและยอดสด 1 กำมือ (25 กรัม)\n- ต้มเอาน้ำดื่ม"
                android:textSize="16sp" />

            <!-- ข้อควรระวัง -->
            <TextView
                android:id="@+id/textViewWarningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="⚠️ ข้อควรระวังในการใช้กะเพราแดง"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="🔴 หญิงตั้งครรภ์และให้นมบุตร\n🔴 ผู้ที่มีภาวะเลือดแข็งตัวช้าหรือใช้ยาละลายลิ่มเลือด\n🔴 ผู้ป่วยเบาหวาน\n🔴 ผู้ที่มีภาวะความดันโลหิตต่ำ\n🔴 ผู้ที่มีปัญหาด้านฮอร์โมนหรือใช้ยาคุมกำเนิด"
                android:textSize="16sp" />

            <!-- สรุป -->
            <TextView
                android:id="@+id/textViewSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="🌱 กะเพราแดง เป็นสมุนไพรไทยที่มีประโยชน์มากมาย"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="กะเพราแดงช่วยบรรเทาอาการต่าง ๆ และมีประโยชน์มากมายต่อสุขภาพ ควรใช้อย่างระมัดระวังเพื่อความปลอดภัยสูงสุด!"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/blankTV"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/backholyBT"
        android:layout_width="373dp"
        android:layout_height="71dp"
        android:layout_x="14dp"
        android:layout_y="764dp"
        android:text="Go Back"
        android:textSize="20sp" />
</AbsoluteLayout>
