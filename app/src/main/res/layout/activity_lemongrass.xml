<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lemongrass">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- เพิ่มรูปตะไคร้ -->
            <ImageView
                android:id="@+id/imageViewLemongrass"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/lemongrass1"
                android:contentDescription="ตะไคร้"
                android:scaleType="centerCrop" />

            <!-- ชื่อสมุนไพร -->
            <TextView
                android:id="@+id/textViewMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌿 ตะไคร้ (Lemongrass)"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                android:layout_marginBottom="8dp" />

            <!-- คำบรรยาย -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ตะไคร้มีรสปร่าและมีกลิ่นหอมเฉพาะที่สามารถใช้ในตำรับยาได้หลายประเภท"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ลักษณะภายนอก -->
            <TextView
                android:id="@+id/textViewFeaturesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 ลักษณะภายนอกของเครื่องยา"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ลำต้นรูปทรงกระบอก แข็ง เกลี้ยง ตามปล้องมักมีไขปกคลุม เหง้ามีข้อและปล้องสั้นมาก กาบใบสีขาวนวลหรือสีขาวปนม่วง รสปร่า มีกลิ่นหอมเฉพาะ"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรรพคุณทางยา -->
            <TextView
                android:id="@+id/textViewBenefitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💊 สรรพคุณทางยา"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewBenefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ ช่วยขับลม ลดอาการท้องอืดท้องเฟ้อแน่นจุกเสียด\n✅ แก้อาการเกร็ง ขับเหงื่อ\n✅ แก้โรคทางเดินปัสสาวะ และทำให้เจริญอาหาร\n✅ ลดความดันโลหิต\n✅ ใช้ภายนอกทาแก้อาการปวดบวมตามข้อ\n✅ ช่วยรักษาเกลื้อน"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- วิธีใช้ -->
            <TextView
                android:id="@+id/textViewUsageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝 วิธีใช้ตะไคร้"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔹 รักษาอาการขัดเบา: ใช้เหง้าและลำต้นสดหรือแห้ง 1 กำมือ ทุบต้มกับน้ำ 3 ครั้ง ครั้งละ 1 ถ้วยชา\n🔹 รักษาท้องอืดท้องเฟ้อ: ใช้เหง้าและลำต้นสด 1 กำมือ ต้มกับน้ำ 2 ถ้วยแก้ว 5-10 นาที ดื่ม 3 ครั้ง หลังอาหาร"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ข้อควรระวัง -->
            <TextView
                android:id="@+id/textViewWarningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ ข้อควรระวังในการใช้ตะไคร้"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔴 ผู้ที่มีภาวะความดันโลหิตต่ำ\n🔴 ผู้ที่เป็นโรคกระเพาะอาหาร\n🔴 หญิงตั้งครรภ์และให้นมบุตร\n🔴 ผู้ที่แพ้ตะไคร้หรือพืชตระกูลเดียวกัน\n🔴 ไม่ควรใช้ร่วมกับยาลดน้ำตาลในเลือด"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรุป -->
            <TextView
                android:id="@+id/textViewSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌱 ตะไคร้ เป็นสมุนไพรที่มีสรรพคุณหลากหลาย"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ตะไคร้มีสรรพคุณช่วยรักษาโรคหลายประเภท แต่ควรใช้อย่างระมัดระวังในผู้ที่มีปัญหาสุขภาพบางประการ"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/backlemonBT"
        android:layout_width="375dp"
        android:layout_height="71dp"
        android:layout_x="17dp"
        android:layout_y="766dp"
        android:text="Go Back"
        android:textSize="20sp" />
</AbsoluteLayout>
