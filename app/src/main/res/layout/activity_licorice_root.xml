<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Licorice_Root">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- เพิ่มรูปชะเอมเทศ -->
            <ImageView
                android:id="@+id/imageViewLicoriceRoot"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/licoriceroot"
                android:contentDescription="ชะเอมเทศ"
                android:scaleType="centerCrop" />

            <!-- ชื่อสมุนไพร -->
            <TextView
                android:id="@+id/textViewMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌿 ชะเอมเทศ (Licorice Root)"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                android:layout_marginBottom="8dp" />

            <!-- คำบรรยาย -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รากเรียวยาวรูปกระสวย ยาวประมาณ 15-30 เซนติเมตร อาจยาวได้ถึง 1 เมตร เส้นผ่านศูนย์กลางประมาณ 5-20 เซนติเมตร"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ลักษณะภายนอก -->
            <TextView
                android:id="@+id/textViewFeaturesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 ลักษณะภายนอกของเครื่องยา"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รากเรียวยาวรูปกระสวย ยาวประมาณ 15-30 เซนติเมตร อาจยาวได้ถึง 1 เมตร เปลือกหุ้มรากสีน้ำตาลอมแดง หรือสีน้ำตาลแก่ เนื้อในรากสีเหลืองอ่อน"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรรพคุณทางยา -->
            <TextView
                android:id="@+id/textViewBenefitsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💊 สรรพคุณทางยา"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewBenefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ แก้คอแห้ง แก้ไอ ขับเสมหะ\n✅ บำรุงปอด แก้เบื่ออาหาร\n✅ บำรุงร่างกายและหัวใจ\n✅ บำรุงกล้ามเนื้อและขับเลือดเน่า\n✅ ใช้เป็นยาระบายอ่อน ๆ"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- วิธีใช้ -->
            <TextView
                android:id="@+id/textViewUsageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝 วิธีใช้ชะเอมเทศ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔹 รากชะเอมแห้ง 5-15 กรัม/วัน (เทียบเท่ากับสารกลีเซอไรซิน 200-800 มิลลิกรัม/วัน)\n🔹 ไม่ควรใช้ติดต่อกันเกิน 6 สัปดาห์"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- ข้อควรระวัง -->
            <TextView
                android:id="@+id/textViewWarningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ ข้อควรระวังในการใช้ชะเอมเทศ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔴 การใช้ในปริมาณสูงอาจทำให้ความดันโลหิตสูง\n🔴 ไม่ควรใช้ร่วมกับยาขับปัสสาวะกลุ่ม thiazide หรือยากระตุ้นหัวใจ\n🔴 ใช้เกินขนาดอาจทำให้ปวดหัวและบวมที่มือเท้า"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- สรุป -->
            <TextView
                android:id="@+id/textViewSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌱 ชะเอมเทศเป็นสมุนไพรที่ช่วยแก้คอแห้ง ไอ ขับเสมหะและบำรุงร่างกาย"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชะเอมเทศมีสรรพคุณช่วยบำรุงร่างกายและรักษาอาการต่างๆ แต่ควรใช้อย่างระมัดระวัง"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/backrootBT"
        android:layout_width="371dp"
        android:layout_height="71dp"
        android:layout_x="16dp"
        android:layout_y="769dp"
        android:text="Go Back"
        android:textSize="20sp" />
</AbsoluteLayout>
